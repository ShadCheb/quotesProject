{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "tsconfig.json",
    "scripts/api_static",
    "src/shared/api/generated",
    "src/shared/api/generated/api/default-api.ts",
    "__mocks__",
    "*.test.ts"
  ]
}
